{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/hooks": ["./src/hooks/index"],
      "@utils": ["./src/utils/index"],
      "@components": ["./src/components/index"],
      "@navigation": ["./src/navigation"],

      "@auth": ["./src/auth"],
      "@style": ["./src/style/main.scss"],
      "@public": ["./public"],
      "@lib": ["./src/libs/NextAuth.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/common/header/topbar/Languages.ts"
  ],
  "exclude": ["node_modules"]
}
